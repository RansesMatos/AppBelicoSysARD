@model Pertrecho
@{
    ViewData["Title"] = "Sistema de Registro Arma";
}


<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="Pertrecho" asp-action="PertrechoCreate" method="post" enctype="multipart/form-data">

    <div>
        <label for="PertrechosDescripcion">Descripcion:</label>
        <input type="text" id="PertrechosDescripcion" name="PertrechosDescripcion"  />
    </div>
    <div>
        <label for="Cantidad">Cantidad:</label>
        <input type="text" id="Cantidad" name="Cantidad" />
    </div>
     <div>
        <label for="IdAlmacen">Almacen:</label>
        <select id="IdAlmacen" name="IdAlmacen" >
            <option value="0">Selecciona Almacen</option>
        </select>
        <input type="hidden" name="Almacen" />
    </div>
       
    <!-- Repeat the above pattern for the remaining fields -->

        <input class="btn btn-primary btn-lg" type="submit" value="Crear" />

</form>


