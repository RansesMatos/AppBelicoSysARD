@model List<AsignacionArma>
@{
    ViewData["Title"] = "Listado Armas";
}

<h1>Listado de Armas Registrados</h1>

<table class="tbl">
    <thead>
        <tr>
            <th>Accion</th>
            <th>Arma ID</th>
            <th>Tipo Arma</th>
            <th>Marca</th>
            <th>Calibre</th>
            <th>Serie</th>
            <th>Almacen</th>
            <th>Estado</th>
            <th>Estatus</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var armaitem in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-primary" >Editar</a>
                </td>
                <td>
                    @armaitem.IdArma
                </td>
                <td>
                    @armaitem.AsignacionNombre
                </td>
                <td>
                    @armaitem.AsignacionDocumento
                </td>
                <td>
                    @armaitem.AsignacionTipo
                </td>
                <td>
                    @armaitem.FechaAsignacion
                </td>
                <td>
                    @armaitem.FechaDevolucion
                </td>
                <td>
                    @armaitem.NotaAsignacion
                </td>
                <td>
                    @if (@armaitem.AsignacionStatus)
                    {
                        <b>Activo</b>
                    }else{
                    <b>Desactivado</b>}
                </td>
               
            </tr>
        }
    </tbody>
</table>