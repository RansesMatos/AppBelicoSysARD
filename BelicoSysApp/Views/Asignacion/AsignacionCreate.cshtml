                removeCell.appendChild(btnRemove);


                row.appendChild(btnRemove);
                row.appendChild(valueCell);
                row.appendChild(inputVal);

                tbody.appendChild(row);
            });

            table.appendChild(tbody);
            valuesTableContainer.appendChild(table);
        }
