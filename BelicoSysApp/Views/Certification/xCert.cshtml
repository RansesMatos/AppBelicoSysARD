@page
@model CertificationReport

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Reporte de Certificación</title>
    <link rel="stylesheet" href="~/css/site.css"> <!-- Asegúrate de incluir tu archivo CSS para estilos -->
    <script src="~/js/site.js"></script> <!-- Incluye tu JavaScript aquí si es necesario -->
</head>
<body>
    <div>
        <h5>Buscar Miembro Para Certificación</h5>
        <input type="text" id="searchByName" class="form-control" placeholder="Ingrese un nombre" />
        <input type="text" id="searchByCedula" class="form-control" placeholder="Ingrese una cédula" />
        <button type="button" class="btn btn-primary" onclick="searchMember()">Buscar</button>
    </div>
    <div id="notification" class="notification"></div>

    <div class="mb-3">
        <label for="AsignacionNombreCert">Nombre:</label>
        <select class="form-select" id="AsignacionNombreCert" name="AsignacionNombreCert">
            <!-- Opciones de selección aquí -->
        </select>
    </div>

    @if (ViewBag.name != null)
    {
        <div class="report-content">
            <div class="report-header">
                <h1>INTENDENCIA MATERIAL BÉLICO</h1>
                <h2>ARMADA DE REPÚBLICA DOMINICANA</h2>
                <p>@ViewBag.CertificationDate</p>
            </div>

            <h3>CERTIFICACIÓN</h3>
            <p>
                POR MEDIO DE LA PRESENTE, CERTIFICO HABER RECIBIDO Del @ViewBag.name ...
                <!-- Detalles extraídos del modelo -->
            </p>

            <ul>
                @foreach (var weaponDetail in ViewBag.WeaponDetails)
                {
                    <li>@weaponDetail</li>
                }
            </ul>

            <p>@ViewBag.CertifierName</p>
            <p>@ViewBag.CertifierTitle</p>
            <!-- Resto del diseño del informe -->

            <div class="report-footer">
                <form asp-controller="Certification" asp-action="ReportIdCard" method="post" target="_blank">
                    <button type="submit" class="btn btn-primary">Imprimir en Pantalla</button>
                </form>
                <a asp-controller="Certification" asp-action="ReportIdCard" class="btn btn-success">Exportar a PDF</a>
            </div>
        </div>
    }
    <script>
        // Aquí puedes incluir cualquier script necesario para tu página
    </script>
</body>
</html>