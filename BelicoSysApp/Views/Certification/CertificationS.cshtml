@page
@model CertificationReport

<!DOCTYPE html>
<html>
<head>
    <title>Certification Report</title>
    <!-- Add CSS for styling -->
</head>
<div>
    <h5 class="modal-title" id="searchModalLabel">Buscar Miembro Para Certificacion</h5>
    <input type="text" id="searchInput" name="nombre" class="form-control" placeholder="Enter a name" />
    <input type="text" id="searchInput2" name="cedula" class="form-control" placeholder="Enter a Cedula" />
    <button type="button" class="btn btn-primary" onclick="loadDropdownData3()">Buscar</button>
</div>
<div id="notification" class="notification"></div>

<div class="mb-3">
    <label class="form-label" for="AsignacionNombreCert">Nombre:</label>
    <select class="form-select" id="AsignacionNombreCert" name="AsignacionNombreCert" onclick="loadDocDataAsigCert()">
    </select>
    <input type="hidden" name="AsignacionNoRango" />
</div>

@if (ViewBag.name != null)
{
    <body>
        <h1>INTENDENCIA MATERIAL BÉLICO</h1>
        <h2>ARMADA DE REPÚBLICA DOMINICANA</h2>
        <p>@ViewBag.CertificationDate</p>

        <h3>CERTIFICACIÓN</h3>
        <p>
            POR MEDIO DE LA PRESENTE, CERTIFICO HABER RECIBIDO Del @ViewBag.name ...
            <!-- Fill in details from the model -->
        </p>

        <ul>
            @foreach (var weaponDetail in ViewBag.WeaponDetails)
            {
                <li>@weaponDetail</li>
            }
        </ul>

    <p>@ViewBag.CertifierName</p>
    <p>@ViewBag.CertifierTitle</p>
    <!-- Rest of the report design -->
</body>}
</html>